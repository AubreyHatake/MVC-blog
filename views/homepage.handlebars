{{#each blog as |b|}}

  <div class="row">

    <div class="container blogBox">
			<div class="row  justify-content-center headerRow">
      <div class="col-8">
        <h2>
          <a class="blogTitle text-uppercase" href="/blog/{{b.id}}">{{b.title}}</a>
        </h2>
      </div>

      <div class="col-4">
        <p class="blogCreate text-right">Created by
          {{b.user.username}}
          on
          {{format_date b.date_created}}
        </p>
      </div>
			</div>
    <div class="blogDesc">
      <p class="text-center blogDescMain">
        {{b.description}}
      </p>
    </div>
    </div>

  </div>

{{/each}}